@using MaineCoon.Models
<div class="row" style="height:10vh">
    <h1>@ViewData["Title"]</h1>
</div>

@try {
    int i = 0;
    List<_Card> _Cards = (List<_Card>)ViewData["CardList"];
    <div class="row">
        <div class="card-deck ">
            <div class="card">
                <div class="card-body text-center align-items-center">
                    <div class="container" style="height:100%">
                        <div class="row align-items-center" style="height:100%">
                            <div class="col">
                                <a href="@this.Context.Request.Path/Add" class="btn btn-plus" style="height:10vh;width:10vh"><span data-feather="plus" style="height:100%;width:100%"></span></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @for (i = 0; i < _Cards.Count && i < 3; i++) {
                <div class="card">
                    <div class="card-header">@_Cards[i].Head</div>
                    <div class="card-body">
                        <h5 class="card-title">@_Cards[i].BodyTitle</h5>
                        <p class="card-text">@_Cards[i].Body</p>
                    </div>
                    <div class="card-footer text-muted">
                        <a href="@_Cards[i].Btn0URL" class="btn btn-primary">@_Cards[i].Btn0Label</a>
                        <a href="@_Cards[i].Btn1URL" class="btn btn-danger">@_Cards[i].Btn1Label</a>
                    </div>
                </div>
            }
        </div>
    </div>
    @if (_Cards.Count >= 3) {
        while (i < _Cards.Count) {
            <div class="row">
                <div class="card-deck ">
                    @for (int j = 0; i < _Cards.Count && j < 4; j++) {
                        <div class="card">
                            <div class="card-header">@_Cards[i].Head</div>
                            <div class="card-body">
                                <h5 class="card-title">@_Cards[i].BodyTitle</h5>
                                <p class="card-text">@_Cards[i].Body</p>
                            </div>
                            <div class="card-footer text-muted">
                                <a href="@_Cards[i].Btn0URL" class="btn btn-primary">@_Cards[i].Btn0Label</a>
                                <a href="@_Cards[i].Btn1URL" class="btn btn-danger">@_Cards[i].Btn1Label</a>
                            </div>
                        </div>
                        i++;
                    }
                </div>
            </div>
        }
    }
}
catch (Exception e) {

}
<style>
    .btn-plus {
        border-radius: 50%;
        background-color: darkgray;
        transition: 0s all;
    }

        .btn-plus:hover {
            background-color: gray;
        }

    .card {
        border-color: darkgrey;
        transition: 1s all;
    }

        .card:hover {
            box-shadow: 0px 0px 10px 3px lightskyblue;
            border-color: lightskyblue;
        }
</style>
